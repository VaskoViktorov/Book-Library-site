@model SearchFormModel
@inject IViewLocalizer Localizer

<form asp-area="LibraryBlog" asp-controller="Search" asp-action="Search" method="post">
    <div class="form-group" style="margin-bottom: 8px;display: inline-block;margin-left: 6px;">
        <p class="glyphicon glyphicon-search first-color" style="top: 28px;left: 5px;margin: 0"></p>
        <input asp-for="SearchText" class="form-control" placeholder="@Localizer["Write here"]" />
    </div>
    <div id="lib-search-form-second" class="form-group" style="display: inline-block">
        <label asp-for="SearchInBooks" class="second-color" style="padding-left: 5px;"></label>
        <input asp-for="SearchInBooks" type="checkbox" />
    </div>
    <div class="form-group" style="display: inline-block">
        <label asp-for="SearchInArticles" class="second-color" style="padding-left: 5px;"></label>
        <input asp-for="SearchInArticles" type="checkbox" />
    </div>
    <div id="lib-search-form-fourth" class="form-group" style="display: inline-block">
        <label asp-for="SearchInGalleries" class="second-color" style="padding-left: 5px;"></label>
        <input asp-for="SearchInGalleries" type="checkbox" />
    </div>
    <div class="form-group" style="display: inline-block">
        <label asp-for="SearchInSubscriptions" class="second-color" style="padding-left: 5px;"></label>
        <input asp-for="SearchInSubscriptions" type="checkbox" />
    </div>
    <div class="lib-inl-b">
    <button class="btn third-color-b second-color">@Localizer["Search"]</button>
    </div>
</form>
