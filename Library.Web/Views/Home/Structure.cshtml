            <img id="tf2p2" src="~/images/SiteImages/@Localizer["TF2"]" alt="@Localizer["POI"]" />
        </div>
        <div id="tf3">
            <img id="tf3p1" src="~/images/SiteImages/TF3arrow.png" alt="@Localizer["arrow"]" />
            <img id="tf3p2" src="~/images/SiteImages/@Localizer["TF3"]" alt="@Localizer["POI"]" />
        </div>
        <div id="tf4">
