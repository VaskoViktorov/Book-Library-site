@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Structure"];
    ViewData["Description"] = Localizer["metadata"];
}
<div class="row text-center">
    <h2>@ViewData["Title"]</h2>
</div>
<div class="row">
    <div class="col-md-12 mr-t-b-25">
        <div class="max-w-750 mr-0-auto text-justify p-l-45">
            <ul class="lib-footer-ul">
                <li><a asp-area="" asp-controller="Home" asp-action="BookBorrowing">@Localizer["Lending"]</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="Children">@Localizer["Children"]</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="ReadingRooms">@Localizer["ReadingRooms"]</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="InformationCenter">@Localizer["InfoCenter"]</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="ForeignReadingRoom">@Localizer["Foreign"]</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="Art">@Localizer["Art"]</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="Homeland">@Localizer["LocalHistory"]</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="SrcDepartment">@Localizer["SRC"]</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="Methodological">@Localizer["Methodological"]</a></li>
            </ul>
        </div>
    </div>
    <div class="col-md-12">
        <img src="~/images/SiteImages/@Localizer["FirstFloor"]" alt="@Localizer["altMapFirst"]" class="ffimg" />
        <div id="ff1">
            <img id="ff1p1" src="~/images/SiteImages/FF1arrow.png" alt="@Localizer["arrow"]" />
            <img id="ff1p2" src="~/images/SiteImages/@Localizer["FF1"]" alt="@Localizer["POI"]" />
        </div>
    </div>
    <div class="col-md-12">
        <img src="~/images/SiteImages/@Localizer["SecondFloor"]" alt="@Localizer["altMapSecond"]" class="sfimg" />
        <div id="sf1">
            <img id="sf1p1" src="~/images/SiteImages/SF1arrow.png" alt="@Localizer["arrow"]" />
            <img id="sf1p2" src="~/images/SiteImages/@Localizer["SF1"]" alt="@Localizer["POI"]" />
        </div>
        <div id="sf2">
