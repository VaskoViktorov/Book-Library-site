        </div>
        <div id="sf3">
            <img id="sf3p1" src="~/images/SiteImages/SF3arrow.png" alt="@Localizer["arrow"]" />
            <img id="sf3p2" src="~/images/SiteImages/@Localizer["SF3"]" alt="@Localizer["POI"]" />
        </div>
        <div id="sf4">
            <img id="sf4p1" src="~/images/SiteImages/SF4arrow.png" alt="@Localizer["arrow"]" />
            <img id="sf4p2" src="~/images/SiteImages/@Localizer["SF4"]" alt="@Localizer["POI"]" />
        </div>
        <div id="sf5">
            <img id="sf5p1" src="~/images/SiteImages/SF5arrow.png" alt="@Localizer["arrow"]" />
            <img id="sf5p2" src="~/images/SiteImages/@Localizer["SF5"]" alt="@Localizer["POI"]" />
        </div>
        <div id="sf6">
            <img id="sf6p1" src="~/images/SiteImages/SF6arrow.png" alt="@Localizer["arrow"]" />
            <img id="sf6p2" src="~/images/SiteImages/@Localizer["SF6"]" alt="@Localizer["POI"]" />
        </div>
    </div>
    <div class="col-md-12">
        <img src="~/images/SiteImages/@Localizer["ThirdFloor"]" alt="@Localizer["altMapThird"]" class="sfimg" />
