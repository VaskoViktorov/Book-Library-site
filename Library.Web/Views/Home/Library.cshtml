@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Library"];
    ViewData["Description"] = Localizer["metadata"];
}
<div class="row  text-center">
    <h2>@Localizer["Library"]</h2>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="row text-justify p-10">
            <p>@Localizer["FirstParagraph"]</p>
            <p>@Localizer["SecondParagraph"]</p>
            <p>@Localizer["ThirdParagraph"]</p>
            </div>
        <div class="text-center">
            <a class="lib-btn" asp-area="" asp-controller="Home" asp-action="History">@Localizer["History"]</a>
        </div>
    </div>

</div>

