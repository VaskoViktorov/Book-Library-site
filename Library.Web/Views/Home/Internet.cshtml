@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Internet"];
    ViewData["Description"] = Localizer["SafetyRules"];
  }
<div class="row text-center">
    <h2>@ViewData["Title"] @Localizer["metadata"]</h2>
</div>
<div class="row text-justify width-85pr mr-0-auto">
    <p class="bold mr-t-b-25">@Localizer["metadata"]</p>
    <ul class="text-justify">

        <li class="mb-10">@Localizer["ListItemOne"];</li>
        <li class="mb-10">@Localizer["ListItemTwo"];</li>
        <li class="mb-10">@Localizer["ListItemThree"];</li>
        <li class="mb-10">@Localizer["ListItemFour"];</li>
        <li class="mb-10">@Localizer["ListItemFive"];</li>
        <li class="mb-10">@Localizer["ListItemSix"];</li>
        <li class="mb-10">@Localizer["ListItemSeven"];</li>
        <li class="mb-10">@Localizer["ListItemEight"];</li>
        <li class="mb-10">@Localizer["ListItemNine"];</li>
    </ul>
    <div class="text-right  mr-t-b-25">
        <small>@Localizer["Source"] <a href="http://www.az-deteto.bg/">www.az-deteto.bg</a></small>
    </div>
</div>

