@model AskFormModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Ask the librarian"];
    ViewData["Description"] = Localizer["We await your questions at Regional Library 'Mihalaki Georgiev' - Vidin."];
}
<div class="row text-center">
    <h2>@ViewData["Title"]</h2>
</div>
<div class="row width-60pr mr-0-auto">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserInfo"></label>
            <input asp-for="UserInfo" class="form-control" />
            <span asp-validation-for="UserInfo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea id="summernote" asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="lib-btn-invrt">@Localizer["Send"]</button>
        <a class="lib-btn" asp-controller="Home" asp-action="Index">@Localizer["Back"]</a>
    </form>
</div>

