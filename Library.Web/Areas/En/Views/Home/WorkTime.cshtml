@{
    ViewData["Title"] = "Opening hours";
    ViewData["Description"] = "Opening time for every department in Regional Library \"Mihalaki Georgiev\" - Vidin";
}
<div class="row text-center">
    <h2>@ViewData["Title"]</h2>
</div>
<div class="row mr-t-b-25 p-10-table">
    <table class="table-hover mr-10-auto table-condensed ">
        <thead>
        <tr>
            <th class="text-center p-10" colspan="3">Library opening hours*</th>
        </tr>        
        </thead>
        <tbody>
        <tr>
            <td class="text-center">Department</td>
            <td class="text-center second-color first-color-b bold">Monday - Friday</td>
            <td class="text-center second-color first-color-b bold">Saturday</td>
        </tr>
        <tr>
            <td class="p-0-3">Book borrowing</td>
            <td class="p-0-3">9:00 to 18:00</td>
            <td class="p-0-3">9:00 to 14:00</td>
        </tr>
        <tr>
            <td class="p-0-3">Children's</td>
            <td class="p-0-3">9:00 to 18:00</td>
            <td class="p-0-3">9:00 to 14:00</td>
        </tr>
        <tr>
            <td class="p-0-3">Reading rooms</td>
            <td class="p-0-3">9:00 to 18:00</td>
            <td class="p-0-3">Closed</td>
        </tr>
        <tr>
            <td class="p-0-3">Foreign language reading room</td>
            <td class="p-0-3">9:00 to 12:00; 12:30 to 17:00</td>
            <td class="p-0-3">Closed</td>
        </tr>
        <tr>
            <td class="p-0-3">Art</td>
            <td class="p-0-3">9:00 to 12:00; 12:30 to 17:00</td>
            <td class="p-0-3">Closed</td>
        </tr>
        <tr>
            <td class="p-0-3">Homeland</td>
            <td class="p-0-3">9:00 to 12:00; 12:30 to 17:00</td>
            <td class="p-0-3">Closed</td>
        </tr>
        <tr>
            <td class="p-0-3">Information center</td>
            <td class="p-0-3">9:00 to 12:00; 12:30 to 17:00</td>
            <td class="p-0-3">Closed</td>
        </tr>
        </tbody>
    </table>  
    <p class="mr-t-b-25 text-center"><span class="bold">*</span> Every last Thursday of the month the library works with readers until 14:00. /sanitary day/</p>
</div>
