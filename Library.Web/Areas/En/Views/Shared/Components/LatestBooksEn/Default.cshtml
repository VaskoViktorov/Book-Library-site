@model IEnumerable<LatestBookServiceModel>
@{
    ViewData["Title"] = "Books";
}
<div class="row">
    <img src="~/images/SiteImages/red.png" alt="red color" style="width: 110%;position: absolute;height: 202px;border-bottom-right-radius: 20px;"/>
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <div class="row">
            <div class="col-md-9" style="padding-left: 0; padding-right: 0px;display: inline-block;">
                <div id="lib-latest-books" style="display: inline-block; padding-left: 1px;">
                    <ul class="lib-new-book-ul rslides">
                        @foreach (var book in Model)
                        {
                            <li>
                                <a class="second-color" asp-area="En" asp-controller="Books" asp-action="Details" asp-route-id="@book.Id"><img src="@book.ImageUrl" alt="@book.BookTitle"></a>
                            </li>
                        }
                    </ul>
                    <h4 class="text-center" id="lib-new-book-h4"><a asp-area="En" asp-controller="Books" asp-action="Books">View Latest Books</a></h4>

                </div>
            </div>
            <div class="col-md-3" style=" padding-left: 3px;">
                <div>
                    <a class="second-color" asp-area="En" asp-controller="Subscriptions" asp-action="Subscriptions"><img id="lib-subscr" src="~/images/SiteImages/subscriptions-en.png" alt="Subscriptions" /></a>
                </div>
            </div>
        </div>
        <div class="row hidden" style="height: -webkit-fill-available;">
            <div id="eventCalendarLocaleFile" class="width-300 mr-t-40"></div>
        </div>
    </div>
</div>
