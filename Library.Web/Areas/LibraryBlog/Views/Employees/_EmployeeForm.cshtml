@model EmployeeFormModel
@inject IViewLocalizer Localizer
@{
    var currentCulture = Context.Features.Get<IRequestCultureFeature>().RequestCulture.UICulture.Name;
}
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="EmployeeNameBg"></label>
        <input asp-for="EmployeeNameBg" class="form-control" />
        <span asp-validation-for="EmployeeNameBg" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployeeNameEn"></label>
        <input asp-for="EmployeeNameEn" class="form-control" />
        <span asp-validation-for="EmployeeNameEn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployeePhoneNumbers"></label>
        <input asp-for="EmployeePhoneNumbers" class="form-control" />
        <span asp-validation-for="EmployeePhoneNumbers" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployeeOrder"></label>
        <input asp-for="EmployeeOrder" class="form-control" type="number" value="1" />
        <span asp-validation-for="EmployeeOrder" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployeeDepartmentStructureId"></label>
        @foreach (var department in Model.DepartmentStructures)
{
               
                    if (currentCulture == "bg-BG")
                    {
                        <div class="row mr-l-0">
                        @(Html.RadioButtonFor(l => l.EmployeeDepartmentStructureId, department.Id))@department.DepartmentUnitBg
                        </div>
                    }
                    else
                    {
                        <div class="row mr-l-0">
                        @(Html.RadioButtonFor(l => l.EmployeeDepartmentStructureId, department.Id))@department.DepartmentUnitEn
                        </div>
                    }
                
}
        <span asp-validation-for="EmployeeDepartmentStructureId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-info">@Localizer["Save"]</button>
    <a class="btn btn-default btn-sm" href="javascript:history.go(-1)">@Localizer["Back"]</a>
</form>

