@model SubscriptionFormModel
@inject IViewLocalizer Localizer
<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="row mr-l-0">
            <label asp-for="Department"></label>
        </div>
        <div class="row mr-l-0">
            @(Html.RadioButtonFor(m => m.Department, DepartmentType.Kids))@Localizer["Children's"]
        </div>
        <div class="row mr-l-0">
            @(Html.RadioButtonFor(m => m.Department, DepartmentType.Rent))@Localizer["Book borrowing"]
        </div>
        <div class="row mr-l-0">
            @(Html.RadioButtonFor(m => m.Department, DepartmentType.Read))@Localizer["Reading rooms"]
        </div>
        <div class="row mr-l-0">
            @(Html.RadioButtonFor(m => m.Department, DepartmentType.Check))@Localizer["Information center"]
        </div>
        <div class="row mr-l-0">
            @(Html.RadioButtonFor(m => m.Department, DepartmentType.Art))@Localizer["Art"]
        </div>
        <div class="row mr-l-0">
            @(Html.RadioButtonFor(m => m.Department, DepartmentType.Land))@Localizer["Homeland"]
        </div>
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="row mr-l-0">
            <label asp-for="Type"></label>
        </div>
        <div class="row mr-l-0">
            @(Html.RadioButtonFor(m => m.Type, SubscriptionType.Newspaper))@Localizer["Newspaper"]
        </div>
        <div class="row mr-l-0">
            @(Html.RadioButtonFor(m => m.Type, SubscriptionType.Magazine))@Localizer["Magazine"]
        </div>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="row mr-l-0">
            <label asp-for="Language"></label>
        </div>
        <div class="row mr-l-0">
            @(Html.RadioButtonFor(l => l.Language, Language.Bg))@Localizer["Bulgarian"]
        </div>
        <div class="row mr-l-0">
            @(Html.RadioButtonFor(l => l.Language, Language.En))@Localizer["English"]
        </div>
        <span asp-validation-for="Language" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-info">@Localizer["Save"]</button>
    <a class="btn btn-default btn-sm" asp-area="LibraryBlog" asp-action="Subscriptions">@Localizer["Back"]</a>
</form>