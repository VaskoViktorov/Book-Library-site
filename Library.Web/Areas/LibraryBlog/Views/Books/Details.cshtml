@model BookViewModel
@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th colspan="12" class="bold text-center">Книги</th>
            @if (User.IsInRole(WebConstants.LibrarianAuthorRole) || User.IsInRole(WebConstants.AdministratorRole))
            {
                <th>
                    <a class="btn-sm btn-success" asp-area="LibraryBlog" asp-controller="Books" asp-action="Create">Създай</a>

                </th>
            }
        </tr>
        <tr>
            <th>Име</th>
            <th>Фамилия</th>
            <th>Заглавие</th>
            <th>Описание</th>
            <th>Град</th>
            <th>Печатница</th>
            <th>Отдел</th>
            <th>Дата</th>
            <th>Страници</th>
            <th>Размер</th>
            <th>Жанр</th>
            <th>Изображение</th>
            @if (User.IsInRole(WebConstants.LibrarianAuthorRole) || User.IsInRole(WebConstants.AdministratorRole))
            {
                <th>Действия:</th>
            }
        </tr>
    </thead>
    <tbody>

            <tr>
                <td>@Model.Book.AuthorFirstName</td>
                <td>@Model.Book.AuthorLastName</td>
                <td>@Model.Book.BookTitle</td>
                <td>@Model.Book.BookDescription</td>
                <td>@Model.Book.CityIssued</td>
                <td>@Model.Book.Press</td>
                <td>@Model.Book.Department.DepartmentsToBgLang()</td>
                <td>@Model.Book.PublishDate</td>
                <td>@Model.Book.Pages</td>
                <td>@Model.Book.Size</td>
                <td>@Model.Book.Genre</td>
                <td><img src="@Model.Book.ImageUrl" class="width-150 img-border" /></td>
                @if (User.IsInRole(WebConstants.LibrarianAuthorRole) || User.IsInRole(WebConstants.AdministratorRole))
                {
                    <td>
                        <a class="btn-sm btn-warning" asp-area="LibraryBlog" asp-controller="Books" asp-action="Edit">Редактирай</a>
                        <a class="btn-sm btn-danger" asp-area="LibraryBlog" asp-controller="Books" asp-action="Delete">Изтрии</a>
                    </td>
                }
            </tr>        
    </tbody>
</table>
