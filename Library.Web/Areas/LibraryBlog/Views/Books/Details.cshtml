@model BookViewModel
@{
    ViewData["Title"] = "Details";
}
<div class="row mr-t-40">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <a class="image-popup-vertical-fit" href="@Model.Book.ImageUrl" title="@Model.Book.BookTitle">
                <img src="@Model.Book.ImageUrl" class="width-46pr img-border float-left mr-r-15 max-w-300 mr-l-10" alt="@Model.Book.BookTitle" />
            </a>
            <h3 style="margin: 0;">@Model.Book.BookTitle</h3>
            <p class="author-text mr-t-10">Автор: @Model.Book.AuthorName</p>
            <p class="mr-t-40">Намери в Отдел "@Model.Book.Department.DepartmentsToBgLang()"</p>
            <table class="table-condensed mr-t-40">
                <tbody>
                    <tr class="br-t">
                        <th>Издател</th>
                        <td>@Model.Book.Press</td>
                    </tr>
                    <tr class="br-t">
                        <th>Град</th>
                        <td>
                            @if (Model.Book.CityIssued == null)
                            {
                                <span>-</span>
                            }
                            else
                            {
                                @Model.Book.CityIssued
                            }
                        </td>
                    </tr>
                    <tr class="br-t">
                        <th>Брой страници</th>
                        <td>
                            @if (Model.Book.Pages == 0)
                            {
                                <span>-</span>
                            }
                            else
                            {
                                @Model.Book.Pages
                            }
                        </td>
                    </tr>
                    <tr class="br-t">
                        <th>Година на издаване</th>
                        <td>@Model.Book.PublishDate.Year г.</td>
                    </tr>
                    <tr class="br-t">
                        <th>Размери</th>
                        <td>
                            @if (Model.Book.Size == 0)
                            {
                                <span>-</span>
                            }
                            else
                            {
                                @Model.Book.Size
                            }
                        </td>
                    </tr>
                    <tr class="br-t">
                        <th>Жанр</th>
                        <td>@Model.Book.Genre</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-1"></div>
        <div class="row max-w-750">
            <div class="col-md-1"></div>
            <div class="col-md-10">
                @if (Model.Book.BookDescription != null)
                {
                    <h4 class="bold text-center mr-t-b-25">Кратко описание</h4>
                    <p>@Model.Book.BookDescription</p>
                }
            </div>
        </div>
        <div class=" row text-center mr-t-10">
            <div class="col-md-1"></div>
            <div class="col-md-6">
                @if (User.IsInRole(WebConstants.LibrarianAuthorRole) || User.IsInRole(WebConstants.AdministratorRole))
                {
                    <a class="btn btn-sm btn-warning" asp-area="LibraryBlog" asp-controller="Books" asp-action="Edit">Редактирай</a>
                    <a class="btn btn-sm btn-danger" asp-area="LibraryBlog" asp-controller="Books" asp-action="Delete">Изтрии</a>
                }
                <a class="btn btn-sm btn-default" href="javascript:history.go(-1)">Обратно</a>
            </div>
        </div>
    </div>
</div>