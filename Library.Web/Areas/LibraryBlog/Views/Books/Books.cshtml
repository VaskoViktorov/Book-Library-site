@model BookListingViewModel
@{
    ViewData["Title"] = "Нови книги";
    ViewData["Description"] = "Нови книги в Регионална библиотека \"Михалаки Георгиев\" - гр. Видин, достъпни за всички.";

    var previousDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    var nextDisabled = string.Empty;

    if (Model.TotalPages==0 || Model.CurrentPage == Model.TotalPages)
    {
        nextDisabled = "disabled";
    }
}
<div class="row text-center">
    <h2>@ViewData["Title"]</h2>
</div>
<div class="row text-center mr-t-b-25">
    @if (User.IsInRole(WebConstants.LibrarianAuthorRole) || User.IsInRole(WebConstants.AdministratorRole))
    {
    <a class="btn-sm btn-success" asp-area="LibraryBlog" asp-controller="Books" asp-action="Create">Създай</a>
    }
</div>
<div class="row">
    <div class="col-md-10 text-center"></div>
    <div class="col-md-2">
        <button id="two-on-row" type="button" class="btn btn-default" aria-label="Left Align" onclick="ChangeClass()">
            <span id="glyph-change" class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
        </button>
    </div>
</div>
<div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-10">
        @Html.Partial("_BookListingView", Model)
        <div class="row">
            <div class="text-center">
                <ul class="pagination">
                    <li class="page-item @previousDisabled">
                        <a class="page-link @previousDisabled" asp-route-page="@Model.PreviousPage" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : string.Empty)"><a class="page-link" asp-route-page="@i">@i</a></li>
            }
                    <li class="page-item @nextDisabled">
                        <a class="page-link @nextDisabled" asp-route-page="@Model.NextPage" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        function ChangeClass() {
            var item = document.getElementById("glyph-change");

            if (item.classList.contains('glyphicon-th-large')) {
                item.classList.remove('glyphicon-th-large');
                item.classList.add('glyphicon-th-list');
            } else {
                item.classList.remove('glyphicon-th-list');
                item.classList.add('glyphicon-th-large');
            }

            var elements = document.getElementsByClassName("min-h-150");

            for (var i = 0, len = elements.length; i < len; i++) {
                if (elements[i].classList.contains('col-md-12')) {
                    elements[i].classList.remove('col-md-12');
                    elements[i].classList.add('col-md-6');
                } else {
                    elements[i].classList.remove('col-md-6');
                    elements[i].classList.add('col-md-12');
                }
            }
        }
    </script>
}