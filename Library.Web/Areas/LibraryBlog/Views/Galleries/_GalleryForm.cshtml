@model GalleryFormModel
@inject IViewLocalizer Localizer
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="row mr-l-0">
            <label asp-for="Language"></label>
        </div>
        <div class="row mr-l-0">
            @(Html.RadioButtonFor(l => l.Language, Language.Bg))@Localizer["Bulgarian"]
        </div>
        <div class="row mr-l-0">
            @(Html.RadioButtonFor(l => l.Language, Language.En))@Localizer["English"]
        </div>
        <span asp-validation-for="Language" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Show"></label>
        <input type="checkbox" asp-for="Show" />
        <span asp-validation-for="Show" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="Files" class="form-control" name="files" multiple />
    </div>
    <button type="submit" class="btn btn-info">@Localizer["Save"]</button>
    <a class="btn btn-default btn-sm" asp-area="LibraryBlog" asp-action="Galleries">@Localizer["Back"]</a>
</form>

