@model LibServiceTypeFormModel
@inject IViewLocalizer Localizer

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="ServiceNameBg"></label>
        <input asp-for="ServiceNameBg" class="form-control" />
        <span asp-validation-for="ServiceNameBg" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ServiceNameEn"></label>
        <input asp-for="ServiceNameEn" class="form-control" />
        <span asp-validation-for="ServiceNameEn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Order"></label>
        <input asp-for="Order" class="form-control" type="number"/>
        <span asp-validation-for="Order" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-info">@Localizer["Save"]</button>
    <a class="btn btn-default btn-sm" href="javascript:history.go(-1)">@Localizer["Back"]</a>
</form>

