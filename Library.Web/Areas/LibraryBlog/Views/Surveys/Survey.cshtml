@model SurveyFormModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Survey"];
    ViewData["Description"] = Localizer["Help us, by sharing your opinion with us."];
}

<div class="row mr-t-b-25">
    <div class="col-md-1"></div>
    <div class="col-md-10 lib-frame">
        <iframe src="@Model.url" width="100%" height="750" frameborder="0" marginheight="0" marginwidth="0">@Localizer["Loading"]…</iframe>
    </div>
</div>
<div class="row text-center mr-10-auto">
    @if (User.IsInRole(WebConstants.LibrarianAuthorRole) || User.IsInRole(WebConstants.AdministratorRole))
    {
    <a class="lib-btn-invrt" asp-area="LibraryBlog" asp-controller="Surveys" asp-action="Edit" asp-route-id="@Model.id">@Localizer["Edit"]</a>
    }
    <a class="lib-btn" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["Back"]</a>
</div>
