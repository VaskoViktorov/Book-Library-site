@model DepartmentFormModel
@inject IViewLocalizer Localizer

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="DepartmentUnitBg"></label>
        <input asp-for="DepartmentUnitBg" class="form-control" />
        <span asp-validation-for="DepartmentUnitBg" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DepartmentUnitEn"></label>
        <input asp-for="DepartmentUnitEn" class="form-control" />
        <span asp-validation-for="DepartmentUnitEn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DepartmentEmail"></label>
        <input asp-for="DepartmentEmail" class="form-control" type="email" />
        <span asp-validation-for="DepartmentEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="row mr-l-0">
            <label asp-for="DepartmentStructureType"></label>
        </div>
        <div class="row mr-l-0">
            @(Html.RadioButtonFor(l => l.DepartmentStructureType, DepartmentStructureType.Administration))@Localizer["Administration"]
        </div>
        <div class="row mr-l-0">
            @(Html.RadioButtonFor(l => l.DepartmentStructureType, DepartmentStructureType.ServiceUnits))@Localizer["Service Units"]
        </div>
        <div class="row mr-l-0">
            @(Html.RadioButtonFor(l => l.DepartmentStructureType, DepartmentStructureType.SpecializedUnits))@Localizer["Specialized Units"]
        </div>
        <span asp-validation-for="DepartmentStructureType" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-info">@Localizer["Save"]</button>
    <a class="btn btn-default btn-sm" asp-area="LibraryBlog" asp-action="Departments">@Localizer["Back"]</a>
</form>

