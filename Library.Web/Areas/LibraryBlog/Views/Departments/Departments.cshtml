@model DepartmentListingViewModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Contacts"];
    ViewData["Description"] = Localizer["List with contact information for the staff of Regional Library \'Mihalaki Georgiev\' - Vidin"];
}

<div class="row text-center mr-t-b-25">
    @if (User.IsInRole(WebConstants.AdministratorRole))
    {
        <a class="btn-sm btn-success mr-l-25" asp-area="LibraryBlog" asp-controller="Departments" asp-action="Create">@Localizer["Create"]</a>
    }
</div>
<div class="row">
    @Html.Partial("_DepartmentsListingView", Model) 
</div>

