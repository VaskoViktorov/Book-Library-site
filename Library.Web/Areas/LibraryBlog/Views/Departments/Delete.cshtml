@model DepartmentDeleteViewModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Delete department"];
}
<div class="row">
    <div class="col-md-11 col-md-offset-1">
        <h1 class="mr-t-b-25">@Localizer["Are you sure, you want to delete the department"]?</h1>
        <a asp-area="LibraryBlog" asp-controller="Departments" asp-action="Destroy" asp-route-id="@Model.Id" class="btn btn-danger">@Localizer["Delete"]</a>
        <a class="btn btn-default btn-sm" asp-area="LibraryBlog" asp-controller="Departments" asp-action="Departments">@Localizer["Back"]</a>
    </div>
</div>