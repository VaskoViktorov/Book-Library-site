@model ArticleViewModel
@{
    ViewData["Title"] = "Details";
}
<div class="row mr-t-40">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <h3 style="margin: 0;">@Model.Article.Title</h3>
            <p class="mr-t-40">Отдел "@Model.Article.Type.DepartmentsToBgLang()"</p>
        </div>
        <div class="col-md-1"></div>
        <div class="row max-w-750">
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <p>@Model.Article.Description</p>
                <p class="mr-t-40">@Model.Article.ReleaseDate</p>
            </div>
        </div>
        <div class=" row text-center mr-t-10">
            <div class="col-md-1"></div>
            <div class="col-md-6">
                @if (User.IsInRole(WebConstants.LibrarianAuthorRole) || User.IsInRole(WebConstants.AdministratorRole))
                {
                    <a class="btn btn-sm btn-warning" asp-area="LibraryBlog" asp-controller="Articles" asp-action="Edit">Редактирай</a>
                    <a class="btn btn-sm btn-danger" asp-area="LibraryBlog" asp-controller="Articles" asp-action="Delete">Изтрии</a>
                }
                <a class="btn btn-sm btn-default" href="javascript:history.go(-1)">Обратно</a>
            </div>
        </div>
    </div>
</div>
