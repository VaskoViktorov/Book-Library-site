@model ArticleListingViewModel


@foreach (var article in Model.Articles)
{

    var count = article.Gallery.Images.Count;

    <div class="col-md-12 mr-t-b-25">

        <div class="row text-center">
            @if (count != 0)
            {
                <a class="image-popup-vertical-fit" href="@article.Gallery.Images.First().ImagePath" Title="@article.Title">
                    <img src="@article.Gallery.Images.First().ImagePath" class="img-border width-60pr" alt="@article.Title" />
                </a>
            }
            <p class="mr-0-auto width-60pr text-right p-t-5">@article.ReleaseDate.ToShortDateString()</p>
        </div>
        <div class="row text-center">
            <h3 class="bold mr-10-auto width-60pr">@article.Title</h3>
            <div class="text-justify mr-10-auto width-60pr">@Html.Raw(article.Description.TruncateHtml(200, "..."))</div>
            <a class="btn btn-sm btn-default" asp-area="LibraryBlog" asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id">Прочети още</a>
            @if (User.IsInRole(WebConstants.LibrarianAuthorRole) || User.IsInRole(WebConstants.AdministratorRole))
            {
                <a class="btn-sm btn-warning" asp-area="LibraryBlog" asp-controller="Articles" asp-action="Edit" asp-route-id="@article.Id">Промени</a>
                <a class="btn-sm btn-danger" asp-area="LibraryBlog" asp-controller="Articles" asp-action="Delete" asp-route-id="@article.Id">Изтрии</a>
            }
        </div>
    </div>
}